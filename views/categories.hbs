<div class="row">
    <div class="col-md-12">
        <h2>Categories</h2>
        <hr />
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th><p>Category ID</p></th>
                        <th><p>Category Name</p></th>
                    </tr>
                </thead>
                <tbody>
                    {{#each categories}}
                        <tr>
                            <td><a href="/items?category={{this.id}}">{{this.id}}</a></td>
                            <td><a href="/items?category={{this.id}}">{{this.category}}</a></td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
        {{#unless categories}}
        <div class="col-md-12 text-center">
            <strong>{{message}}</strong>
        </div>
        {{/unless}}
    </div>
</div>